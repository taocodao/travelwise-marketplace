{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "types": ["node"]
  },
  "include": [
    "contracts/**/*.sol",
    "scripts/**/*.ts",
    "test/**/*.ts",
    "hardhat.config.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "cache",
    "artifacts"
  ],
  "ts-node": {
    "transpileOnly": true,
    "files": true
  }
}
