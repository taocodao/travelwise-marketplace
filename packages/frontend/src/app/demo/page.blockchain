// Types
type TransactionStatus = "PENDING" | "CONFIRMED" | "FAILED";

export interface MarketplaceTransaction {
  id: string;
  txHash: string;
  from: string;
  to: string;
  amount: number;
  toolName: string;
  mcpServerId?: string | null;
  description: string;
  status: TransactionStatus;
  timestamp: string;
}

interface ToolPaymentPayload {
  txHash: string;
  from: string;
  to: string;
  amount: number;
  toolName: string;
  mcpServerId?: string;
  description: string;
  walletAddress: string;
}

interface Message {
  id: string;
  role: 'user' | 'assistant' | 'system';
  content: string;
  timestamp: Date;
  cost?: number;
  executionTime?: number;
  functionsUsed?: string[];
  mcpResults?: any[];
}

interface MCPServer {
  id: string;
  name: string;
  provider: string;
  coverage: string;
  database: string;
  walletAddress: string;
  balance: number;
  status: 'connected' | 'disconnected';
  tools: MCPTool[];
  endpoint: string;
}

interface MCPTool {
  id: string;
  name: string;
  description: string;
  cost: number;
  callCount: number;
}

interface TestResult {
  id: string;
  query: string;
  success: boolean;
  cost: number;
  timestamp: Date;
}

const shortenAddress = (addr: string): string => {
  if (!addr || addr.length < 10) return addr;
  return `${addr.slice(0, 6)}...${addr.slice(-4)}`;
};

