  // Connect wallet
  async function connectWallet() {
    try {
      setIsConnecting(true);
      setError(null);

      if (!(window as any).ethereum) {
        setError("No wallet found. Please install MetaMask.");
        return;
      }

      const ethProvider = new ethers.BrowserProvider((window as any).ethereum);
      const accounts = await ethProvider.send("eth_requestAccounts", []);
      const account = accounts[0] as string;

      const network = await ethProvider.getNetwork();
      if (Number(network.chainId) !== BASE_SEPOLIA_CHAIN_ID) {
        setError("Please switch your wallet to the Base Sepolia network.");
        return;
      }

      setWalletAddress(account.toLowerCase());
    } catch (e: any) {
      setError(e.message ?? "Failed to connect wallet");
    } finally {
      setIsConnecting(false);
    }
  }

  // Record transaction to database
  async function recordTransaction(payload: ToolPaymentPayload) {
    const res = await fetch("/api/transactions", {
      method: "POST",
      headers: { "Content-Type": "application/json" },
      body: JSON.stringify(payload),
    });

    if (!res.ok) {
      const body = await res.json().catch(() => ({}));
      throw new Error(body.error ?? "Failed to record transaction");
    }

    const data = (await res.json()) as { success: boolean; transaction: any };
    const t = data.transaction;
    const tx: MarketplaceTransaction = {
      id: t.id,
      txHash: t.txHash,
      from: t.from,
      to: t.to,
      amount: Number(t.amount ?? 0),
      toolName: t.toolName ?? "",
      mcpServerId: t.mcpServerId ?? null,
      description: t.description ?? "",
      status: (t.status as TransactionStatus) ?? "PENDING",
      timestamp: t.timestamp ?? new Date().toISOString(),
    };

    setTransactions((prev) => [tx, ...prev]);
  }

  // Load transactions for wallet
  async function loadTransactionsForWallet(addr: string) {
    const res = await fetch(`/api/transactions/${addr.toLowerCase()}`);
    if (!res.ok) return;

    const data = (await res.json()) as {
      success: boolean;
      transactions: any[];
    };

    const items: MarketplaceTransaction[] = (data.transactions ?? []).map((t) => ({
      id: t.id,
      txHash: t.txHash,
      from: t.from,
      to: t.to,
      amount: Number(t.amount ?? 0),
      toolName: t.toolName ?? "",
      mcpServerId: t.mcpServerId ?? null,
      description: t.description ?? "",
      status: (t.status as TransactionStatus) ?? "PENDING",
      timestamp: t.timestamp ?? new Date().toISOString(),
    }));

    setTransactions(items);
  }

  // Pay and call MCP tool with real Base Sepolia payment
  async function handlePayAndCallTool(options: {
    toolName: string;
    mcpServerId?: string;
    serverWalletAddress: string;
    amountUsd: number;
    description: string;
  }) {
    if (!walletAddress) {
      await connectWallet();
      if (!walletAddress) return;
    }

    setIsPaying(true);
    setError(null);

    try {
      const ethProvider = new ethers.BrowserProvider((window as any).ethereum);
      const signer = await ethProvider.getSigner();
      const network = await ethProvider.getNetwork();
      
      if (Number(network.chainId) !== BASE_SEPOLIA_CHAIN_ID) {
        throw new Error("Please switch your wallet to Base Sepolia.");
      }

      const usdc = new ethers.Contract(
        USDC_CONTRACT_ADDRESS,
        ["function transfer(address to, uint256 amount) returns (bool)"],
        signer
      );

      const amountInUnits = ethers.parseUnits(options.amountUsd.toString(), 6);
      const txResponse = await usdc.transfer(options.serverWalletAddress, amountInUnits);
      
      await txResponse.wait(2);

      await recordTransaction({
        txHash: txResponse.hash,
        from: walletAddress!,
        to: options.serverWalletAddress,
        amount: options.amountUsd,
        toolName: options.toolName,
        mcpServerId: options.mcpServerId,
        description: options.description,
        walletAddress: walletAddress!,
      });

    } catch (e: any) {
      console.error(e);
      setError(e.message ?? "Failed to process payment");
    } finally {
      setIsPaying(false);
    }
  }

  // Add local transaction (for display before blockchain confirmation)
  const addLocalTransaction = (description: string, toolName: string, amount: number): void => {
